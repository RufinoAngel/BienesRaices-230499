extends ../layout/index

block contenido
    div.py-10
        h1.text-center.font-extrabold.my-10.text-4xl.text-pigmentgreen Bienes 
            span.font-normal.text-black Raíces
        h2.text-center.font-extrabold.text-2xl=page
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/registro").space-y-5.px-6
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold Nombre Completo: 
                        input#nombre.w-full.px-3.py-2.border-2.border-black.rounded-md(type="text" placeholder="Ej. Juanito Peréz" name="names")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Email de Registro: 
                        input#email.w-full.px-3.py-2.border-2.border-black.rounded-md(type="email" placeholder="Ej. usuario@paisdelasmaravillas.com" name="correo-usuario")
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold Contraseña: 
                        input#password.w-full.px-3.py-2.border-2.border-black.rounded-md(type="password" placeholder="Minimo de 8 caracteres" name="pass-usuario")
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold Confirmar Contraseña: 
                        input#password2.w-full.px-3.py-2.border-2.border-balck.rounded-md(type="password" placeholder="Minimo de 8 caracteres" name="pass2-usuario")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-pigmentgreen") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/passwordRecovery" class="hover:underline decoration-2 hover:decoration-pigmentgreen") Recuperar Contraseña
                    input(class="w-full bg-pigmentgreen hover:bg-celadon text-black font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")